---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.14.0/devicon.min.css"
    />
    <link href="./public/favicon.svg" rel="shortcut icon" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --white: #f2f2f2;
    --black: #2a2a2a;
    --yellow: #eede54;
  }

  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: Helvetica, Arial, sans-serif;
    background-color: var(--black);
    color: var(--white);
  }

  html {
    scroll-behavior: smooth;
  }

  main {
    margin: 0 3em 0 3em;
  }

  .name-title {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 1em auto 1em auto;
    color: var(--white);
    font-weight: lighter;
    text-align: center;
  }

  header {
    margin: 1em 0 1em 0;
    height: 3em;
    display: flex;
    justify-content: center;
    font-size: 0.8em;
    font-weight: bold;
    background-color: var(--yellow);
    align-items: center;
  }

  nav {
    background-color: var(--yellow);
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-evenly;
    margin: 0.4em 3em 0.4em 3em;
  }

  nav a {
    display: flex;
    align-items: center;
    padding: 1em;
    background-color: var(--yellow);
    color: var(--black);
    text-align: center;
    text-decoration: none;
    cursor: pointer;
  }

  nav a:hover {
    background-color: var(--black);
    color: var(--yellow);
  }

  p {
    margin: 1em 0 1em 0;
    line-height: 2rem;
    text-indent: 4rem;
    text-align: justify;
  }

  section {
    display: flex;
    flex-direction: column;
    margin: 2rem 1rem 2rem 1rem;
  }

  .subtitle {
    font-size: 1.5rem;
    color: var(--yellow);
  }

  .img-container {
    position: relative;
    width: max-content;
  }

  .img-container:hover .project-img {
    opacity: 0.4;
  }

  .img-container:hover .project-middle {
    opacity: 90%;
  }

  .project-container {
    display: flex;
    flex-wrap: wrap;
  }

  .project-item-title {
    text-align: center;
  }

  .project-middle {
    transition: 0.5s ease;
    padding: 1rem;
    opacity: 0;
    position: absolute;
    top: 0;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    align-items: center;
    font-weight: bold;
  }

  .project-middle * {
    margin-bottom: 1em;
  }

  .project-img {
    width: 360px;
    height: 200px;
  }

  .project-text {
    text-align: center;
  }

  .project-stack {
    margin: 0.5em;
    margin-bottom: 1em;
  }

  .project-box {
    display: flex;
    flex-direction: column;
    width: max-content;
    margin: 1em;
  }

  .contact-item {
    display: flex;
  }

  .contact-item-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .icon {
    height: 40px;
    width: 40px;
    margin: 1rem;
  }

  footer {
    width: 100%;
    color: var(--white);
    font-size: 0.75rem;
    bottom: 1em;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.4em;
  }

  .icon-container {
    display: grid;
    grid-template-columns: repeat(6, minmax(0, 1fr));
    margin: 0 10rem 0 10rem;
  }

  .icon-container img {
    height: 50px;
    width: 50px;
    margin: 1rem;
  }

  .icon-container img:hover {
    transform: scale(1.7);
    transition: 100ms linear;
  }

  .icon-box {
    margin: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media screen and (max-width: 767px) {
    p {
      text-indent: 2rem;
    }

    main {
      margin: 0 0.5em;
    }

    nav {
      flex-direction: column;
      margin: 0;
    }

    header {
      height: auto;
    }

    nav a {
      display: block;
      padding: 0.5em;
    }

    .subtitle {
      text-align: center;
    }

    .project-container {
      flex-direction: column;
      align-items: center;
    }
  }

  @media screen and (max-width: 640px) {
    .project-img {
      width: calc(360px * 4 / 5);
      height: calc(200px * 4 / 5);
    }
  }

  .github-link {
    text-decoration: none;
  }

  a:hover {
    color: var(--yellow);
  }

  .link-icons {
    fill: white;
  }
</style>
